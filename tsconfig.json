{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "vitest",
      "vite/client"
    ],
    "allowJs": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "types/**/*",
    "vite.config.*",
    "cypress.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
